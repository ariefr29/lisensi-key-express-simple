<!DOCTYPE html>
<html lang="id">

<head>
    <%- include('../partials/head', { pageTitle: 'Detail License' }) %>
</head>

<body>
    <div class="flex bg-black min-h-screen">
        <%- include('../partials/components/sidebar', { admin, activePage: '/admin/licenses' }) %>

            <main class="flex-1 ml-64 p-8 overflow-y-auto h-screen">
                <div class="max-w-4xl mx-auto space-y-6">
                    <!-- License Details Card -->
                    <div class="card p-6 border border-gray-800 bg-gray-900/50">
                        <div class="flex items-start justify-between mb-6">
                            <div>
                                <h2 class="text-2xl font-bold text-white mb-2">Detail License</h2>
                                <code class="text-lg font-mono text-purple-400 bg-purple-400/10 px-2 py-1 rounded">
                                <%= license.license_key %>
                            </code>
                            </div>
                            <div class="text-right">
                                <div class="mb-2">
                                    <% if (license.status==='active' ) { %>
                                        <span class="badge badge-active text-lg">Aktif</span>
                                        <% } else if (license.status==='suspended' ) { %>
                                            <span class="badge badge-suspended text-lg">Ditangguhkan</span>
                                            <% } else { %>
                                                <span class="badge badge-expired text-lg">Kadaluarsa</span>
                                                <% } %>
                                </div>
                                <div>
                                    <p class="text-gray-500 text-xs font-medium uppercase tracking-wider mb-1">
                                        Penggunaan Domain
                                    </p>
                                    <p class="text-xl font-bold text-white">
                                        <%= license.domainCount %> / <%= license.max_domains %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Notes Section -->
                        <% if (license.notes) { %>
                            <div class="mt-6 p-4 bg-gray-800/50 rounded-lg border border-gray-700">
                                <p class="text-xs font-semibold text-gray-500 uppercase mb-2">Catatan</p>
                                <p class="text-gray-300">
                                    <%= license.notes %>
                                </p>
                            </div>
                            <% } %>
                    </div>

                    <!-- Actions Card -->
                    <div class="card p-6 border border-gray-800 bg-gray-900/50"
                        x-data="{ showExtendForm: false, newExpiry: '' }">
                        <h3 class="text-lg font-bold text-white mb-4">Aksi</h3>

                        <div class="flex flex-wrap gap-3">
                            <!-- Suspend/Reactivate Button -->
                            <% if (license.status==='active' ) { %>
                                <form action="/admin/licenses/<%= license.id %>/suspend" method="POST"
                                    onsubmit="return confirm('Yakin ingin menangguhkan license ini?')">
                                    <button type="submit"
                                        class="btn-secondary text-red-400 border-red-500/20 hover:bg-red-500/10">
                                        <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636">
                                            </path>
                                        </svg>
                                        Tangguhkan License
                                    </button>
                                </form>
                                <% } else if (license.status==='suspended' ) { %>
                                    <form action="/admin/licenses/<%= license.id %>/reactivate" method="POST">
                                        <button type="submit"
                                            class="btn-secondary text-green-400 border-green-500/20 hover:bg-green-500/10">
                                            <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z">
                                                </path>
                                            </svg>
                                            Aktifkan Kembali
                                        </button>
                                    </form>
                                    <% } %>

                                        <!-- Extend Expiry Button -->
                                        <button type="button" class="btn-primary"
                                            @click="showExtendForm = !showExtendForm">
                                            <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z">
                                                </path>
                                            </svg>
                                            Perpanjang Masa Berlaku
                                        </button>

                                        <!-- Back Button -->
                                        <a href="/admin/licenses" class="btn-secondary">
                                            ‚Üê Kembali ke Daftar
                                        </a>
                        </div>

                        <!-- Extend Form (Hidden by default) -->
                        <div x-show="showExtendForm" x-transition
                            class="mt-6 p-4 bg-gray-800/50 rounded-lg border border-gray-700">
                            <form action="/admin/licenses/<%= license.id %>/extend" method="POST"
                                class="flex gap-3 items-end">
                                <div class="flex-1">
                                    <label class="block text-sm font-semibold text-gray-300 mb-2">
                                        Tanggal Kadaluarsa Baru
                                    </label>
                                    <input type="date" name="expire_at" class="input-field" required
                                        x-model="newExpiry">
                                </div>
                                <button type="submit" class="btn-primary">Simpan</button>
                                <button type="button" class="btn-secondary"
                                    @click="showExtendForm = false">Batal</button>
                            </form>
                        </div>
                    </div>

                    <!-- Activated Domains Card -->
                    <div class="card p-6 border border-gray-800 bg-gray-900/50">
                        <h3 class="text-lg font-bold text-white mb-4">Domain Teraktivasi</h3>

                        <% if (domains.length===0) { %>
                            <!-- Empty State -->
                            <div class="text-center py-12 text-gray-500">
                                <svg class="w-12 h-12 mx-auto mb-3 text-gray-600" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9">
                                    </path>
                                </svg>
                                <p class="text-sm">Belum ada domain yang diaktivasi</p>
                            </div>
                            <% } else { %>
                                <!-- Domains Table -->
                                <div class="overflow-x-auto">
                                    <table class="w-full text-left">
                                        <thead>
                                            <tr class="border-b border-gray-800">
                                                <th
                                                    class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Domain
                                                </th>
                                                <th
                                                    class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Pengecekan Terakhir
                                                </th>
                                                <th
                                                    class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Diaktivasi Pada
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="divide-y divide-gray-800">
                                            <% domains.forEach(domain=> { %>
                                                <tr class="hover:bg-gray-800/50 transition-colors">
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <div class="flex items-center">
                                                            <svg class="w-4 h-4 text-emerald-500 mr-2" fill="none"
                                                                stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z">
                                                                </path>
                                                            </svg>
                                                            <span class="font-medium text-gray-300">
                                                                <%= domain.domain %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                        <%= domain.last_check_at ? new
                                                            Date(domain.last_check_at).toLocaleString('id-ID')
                                                            : 'Belum pernah' %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                        <%= new Date(domain.created_at).toLocaleString('id-ID') %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } %>
                    </div>
                </div>
            </main>
    </div>
</body>

</html>