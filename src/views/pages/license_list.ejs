<!DOCTYPE html>
<html lang="id">

<head>
    <%- include('../partials/head', { pageTitle: 'Semua License' }) %>
</head>

<body>
    <div class="flex bg-black min-h-screen">
        <%- include('../partials/components/sidebar', { admin, activePage: '/admin/licenses' }) %>

            <main class="flex-1 ml-64 p-8 overflow-y-auto h-screen">
                <!-- Header Section -->
                <div class="flex items-center justify-between mb-8">
                    <div>
                        <h2 class="text-2xl font-bold text-white tracking-tight">Semua License</h2>
                        <p class="text-gray-500 text-sm mt-1">Kelola dan pantau semua license yang dibuat</p>
                    </div>
                    <a href="/admin/licenses/create" class="btn-primary">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4">
                            </path>
                        </svg>
                        Buat Baru
                    </a>
                </div>

                <!-- Search Section -->
                <div class="card p-4 mb-6 border border-gray-800 bg-gray-900/50">
                    <form action="/admin/licenses" method="GET">
                        <div class="flex gap-3">
                            <div class="relative flex-1">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor"
                                        viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z">
                                        </path>
                                    </svg>
                                </div>
                                <input type="text" name="search" class="input-field pl-10"
                                    placeholder="Cari berdasarkan license key..." value="<%= search %>">
                            </div>
                            <button type="submit" class="btn-primary">Cari</button>
                            <% if (search) { %>
                                <a href="/admin/licenses" class="btn-secondary">Hapus</a>
                                <% } %>
                        </div>
                    </form>
                </div>

                <!-- Licenses Table -->
                <div class="card border border-gray-800 bg-gray-900/50">
                    <% if (licenses.length===0) { %>
                        <!-- Empty State -->
                        <div class="text-center py-12 text-gray-500">
                            <svg class="w-12 h-12 mx-auto mb-3 text-gray-600" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10">
                                </path>
                            </svg>
                            <p class="text-sm">Tidak ada license ditemukan</p>
                        </div>
                        <% } else { %>
                            <!-- Table Content -->
                            <div class="overflow-x-auto">
                                <table class="w-full text-left">
                                    <thead>
                                        <tr class="border-b border-gray-800">
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                License Key
                                            </th>
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Domain
                                            </th>
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Status
                                            </th>
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Kadaluarsa
                                            </th>
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Aksi
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-800">
                                        <% licenses.forEach(license=> { %>
                                            <tr class="hover:bg-gray-800/50 transition-colors">
                                                <!-- License Key -->
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <code
                                                        class="text-xs font-mono text-purple-400 bg-purple-400/10 px-2 py-1 rounded">
                                                <%= license.license_key %>
                                            </code>
                                                </td>

                                                <!-- Domains Used -->
                                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                                    <%= license.domainCount %> / <%= license.max_domains %>
                                                </td>

                                                <!-- Status Badge -->
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <% if (license.status==='active' ) { %>
                                                        <span class="badge badge-active">Aktif</span>
                                                        <% } else if (license.status==='suspended' ) { %>
                                                            <span class="badge badge-suspended">Ditangguhkan</span>
                                                            <% } else { %>
                                                                <span class="badge badge-expired">Kadaluarsa</span>
                                                                <% } %>
                                                </td>

                                                <!-- Expiry Date -->
                                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                    <%= new Date(license.expire_at).toLocaleDateString('id-ID') %>
                                                </td>

                                                <!-- Actions -->
                                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                                    <a href="/admin/licenses/<%= license.id %>"
                                                        class="text-gray-400 hover:text-white font-medium transition-colors text-xs border border-gray-700 px-3 py-1 rounded hover:bg-gray-800">
                                                        Lihat Detail
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <% if (totalPages> 1) { %>
                                <div class="p-4 border-t border-gray-800 flex justify-center space-x-2">
                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <a href="/admin/licenses?page=<%= i %><%= search ? '&search=' + search : '' %>"
                                            class="<%= i === currentPage ? 'bg-white text-black' : 'bg-transparent text-gray-400 hover:text-white border border-gray-700' %> px-3 py-1 rounded text-sm transition-colors">
                                            <%= i %>
                                        </a>
                                        <% } %>
                                </div>
                                <% } %>
                                    <% } %>
                </div>
            </main>
    </div>
</body>

</html>