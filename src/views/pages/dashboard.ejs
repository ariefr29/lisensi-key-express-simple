<!DOCTYPE html>
<html lang="id">

<head>
    <%- include('../partials/head', { pageTitle: 'Dashboard' }) %>
</head>

<body>
    <div class="flex bg-black min-h-screen">
        <%- include('../partials/components/sidebar', { admin, activePage: '/admin/dashboard' }) %>
            <main class="flex-1 ml-64 p-8 overflow-y-auto h-screen">
                <header class="flex justify-between items-center mb-8">
                    <div>
                        <h1 class="text-2xl font-bold text-white tracking-tight">Dashboard</h1>
                        <p class="text-gray-500 text-sm mt-1">Ringkasan performa sistem license Anda</p>
                    </div>
                    <div class="flex items-center gap-4">
                        <span class="text-sm text-gray-500">
                            <%= new Date().toLocaleDateString('id-ID', {weekday:'long', year:'numeric', month:'long',
                                day:'numeric'}) %>
                        </span>
                    </div>
                </header>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <% const statsConfig=[ { label: 'Total License' , value: stats.total, color: 'blue' ,
                        icon: 'M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z'
                        }, { label: 'Aktif' , value: stats.active, color: 'emerald' ,
                        icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' }, { label: 'Ditangguhkan' , value:
                        stats.suspended, color: 'amber' ,
                        icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'
                        }, { label: 'Kadaluarsa' , value: stats.expired, color: 'rose' ,
                        icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' } ]; %>
                        <% statsConfig.forEach(stat=> { %>
                            <div
                                class="card p-6 border border-gray-800 bg-gray-900/50 hover:border-gray-700 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-gray-500 text-xs font-medium uppercase tracking-wider mb-1">
                                            <%= stat.label %>
                                        </p>
                                        <p class="text-3xl font-bold text-<%= stat.color %>-500 tracking-tight">
                                            <%= stat.value %>
                                        </p>
                                    </div>
                                    <div
                                        class="w-10 h-10 bg-<%= stat.color %>-500/10 rounded-lg flex items-center justify-center border border-<%= stat.color %>-500/20">
                                        <svg class="w-5 h-5 text-<%= stat.color %>-500" fill="none"
                                            stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="<%= stat.icon %>"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                </div>
                <div class="card border border-gray-800 bg-gray-900/50">
                    <div class="p-6 border-b border-gray-800">
                        <h2 class="text-lg font-semibold text-white">Aktivasi Terbaru</h2>
                    </div>
                    <% if (latestActivations.length===0) { %>
                        <div class="text-center py-12 text-gray-500">
                            <svg class="w-12 h-12 mx-auto mb-3 text-gray-600" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4">
                                </path>
                            </svg>
                            <p class="text-sm">Belum ada aktivasi</p>
                        </div>
                        <% } else { %>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left">
                                    <thead>
                                        <tr class="border-b border-gray-800">
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                License Key</th>
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Domain</th>
                                            <th
                                                class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                Waktu Aktivasi</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-800">
                                        <% latestActivations.forEach(activation=> { %>
                                            <tr class="hover:bg-gray-800/50 transition-colors">
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <code
                                                        class="text-xs font-mono text-purple-400 bg-purple-400/10 px-2 py-1 rounded"><%= activation.license_key %></code>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                                    <%= activation.domain %>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                    <%= new Date(activation.created_at).toLocaleString('id-ID') %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% } %>
                </div>
            </main>
    </div>
</body>

</html>